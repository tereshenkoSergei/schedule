<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentText">
        <item name="android:textColor">#00ffffff</item>
    </style>

    <style name="standard_black_text">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="standard_text">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="standard_big_text">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>
    <style name="standard_value_text">


        <item name ="android:textStyle">italic|normal</item>
        <item name ="android:textColor">@color/colorWhite</item>
        <item name ="android:textSize">@dimen/standard_text_size</item>

    </style>


    <style name="standard_value_black_text">


        <item name ="android:textStyle">italic|normal</item>
        <item name ="android:textColor">@color/colorBlack</item>
        <item name ="android:textSize">@dimen/standard_text_size</item>

    </style>

</resources>
